for_window [class="kitty"] move to workspace $ws1
for_window [class="Spotify"] move to workspace $ws2
for_window [class="TelegramDesktop"] move to workspace $ws2

# Start apps
exec --no-startup-id "sleep 2; google-chrome-stable"
exec --no-startup-id kitty
exec --no-startup-id spotify
# Sleep because of tray icon
exec --no-startup-id "sleep 4; telegram-desktop"

# master-stack keybinding (moves stack window to master and current master back to stack window)
bindsym $mod+m exec "i3-msg \\"move left; focus up; move right; focus left\\""

